<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Форма для фона с закругленными углами -->

    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/white"/>
        </shape>
    </item>
    <!-- Форма для линии внизу -->
    <item
        android:left="0dp"
        android:right="0dp"
        android:gravity="bottom">
        <shape android:shape="rectangle">
            <solid android:color="@color/background_grey"/> <!-- Цвет линии -->
            <size android:height="1dp"/> <!-- Высота линии -->
        </shape>
    </item>
</layer-list>