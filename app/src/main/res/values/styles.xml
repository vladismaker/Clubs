<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="MyDatePickerDialogTheme" parent="ThemeOverlay.Material3.MaterialCalendar">
        <!-- Цвет заголовка календаря -->
        <item name="materialCalendarHeaderTitle">@color/black</item>
        <item name="colorPrimary">@color/select</item>
        <item name="colorSecondary">@color/black</item>
        <item name="android:background">@color/white</item>
    </style>

    <style name="BottomNavigationTheme" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="itemTextColor">@color/background_grey</item>
        <!-- Цвет активных элементов -->
        <item name="itemIconTint">@color/select</item>
        <!--<item name="itemActiveIndicatorStyle">@style/Custom.Indicator</item>-->
    </style>

    <style name="Custom.Indicator" parent="Widget.Material3.BottomNavigationView.ActiveIndicator">
        <item name="android:color">@color/transparent</item>
        <item name="colorPrimary">@color/select</item>
        <item name="colorSecondary">@color/black</item>
    </style>
</resources>